<prism:PrismApplication x:Class="C_TestForge.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:cov="clr-namespace:C_TestForge.UI.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:utilities="clr-namespace:C_TestForge.UI.Utilities">
    <prism:PrismApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design Dictionaries -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Indigo.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <cov:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <cov:ScopeToColorConverter x:Key="ScopeToColorConverter" />
            <cov:CollectionToStringConverter x:Key="CollectionToStringConverter" />
            <cov:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <cov:BoolToStringConverter x:Key="BoolToStringConverter" />
            <cov:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <cov:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <cov:EqualityConverter x:Key="EqualityConverter" />
            <cov:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
            <cov:FileTypeToColorConverter x:Key="FileTypeToColorConverter" />
            <cov:FileTypeToIconConverter x:Key="FileTypeToIconConverter" />
            <cov:BoolToIconConverter x:Key="BoolToIconConverter" />
            <cov:BoolToColorConverter x:Key="BoolToColorConverter" />
            <cov:TypeToColorConverter x:Key="TypeToColorConverter" />
            <cov:ScopeToIconConverter x:Key="ScopeToIconConverter" />
            <cov:BoolToRowHeightConverter x:Key="BoolToRowHeightConverter" />
            <cov:DepthToColorConverter x:Key="DepthToColorConverter" />
            <cov:InverseCountToVisibilityConverter x:Key="InverseCountToVisibilityConverter" />

            <!-- Font Definitions -->
            <FontFamily x:Key="MainFont">Segoe UI, Roboto, Arial</FontFamily>
            <FontFamily x:Key="CodeFont">Cascadia Code, Consolas, Courier New, Monospace</FontFamily>

            <!-- Modern Color Palette -->
            <!-- Backgrounds -->
            <SolidColorBrush x:Key="AppBackground" Color="#F0F2F5"/>
            <SolidColorBrush x:Key="ContentBackground" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="HeaderBackground" Color="#FFFFFF"/>
            
            <!-- Sidebar -->
            <Color x:Key="SidebarBackgroundColor">#0D1117</Color>
            <SolidColorBrush x:Key="SidebarBackground" Color="{StaticResource SidebarBackgroundColor}"/>
            <SolidColorBrush x:Key="SidebarBackgroundActive" Color="#161B22"/>
            <SolidColorBrush x:Key="SidebarBorderBrush" Color="#30363D"/>
            <SolidColorBrush x:Key="SidebarText" Color="#C9D1D9"/>
            <SolidColorBrush x:Key="SidebarTextActive" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SidebarIcon" Color="#8B949E"/>

            <!-- Text -->
            <SolidColorBrush x:Key="PrimaryText" Color="#1F2328"/>
            <SolidColorBrush x:Key="SecondaryText" Color="#656D76"/>
            <SolidColorBrush x:Key="DisabledText" Color="#9DA5B0"/>
            <SolidColorBrush x:Key="AccentText" Color="#FFFFFF"/>

            <!-- Accents -->
            <SolidColorBrush x:Key="AccentColor" Color="#2F81F7"/>
            <SolidColorBrush x:Key="AccentLight" Color="#58A6FF"/>
            <SolidColorBrush x:Key="AccentDark" Color="#1C6CD3"/>

            <!-- Common -->
            <SolidColorBrush x:Key="BorderLight" Color="#D0D7DE"/>
            <SolidColorBrush x:Key="BorderDark" Color="#30363D"/>
            <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ShadowColor" Color="#000000"/>
            <SolidColorBrush x:Key="SuccessColor" Color="#2DA44E"/>
            <SolidColorBrush x:Key="WarningColor" Color="#D29922"/>
            <SolidColorBrush x:Key="ErrorColor" Color="#F85149"/>
            <SolidColorBrush x:Key="InfoColor" Color="#2F81F7"/>

            <!-- Glass Effect Brush -->
            <SolidColorBrush x:Key="GlassEffectBrush" Color="{StaticResource SidebarBackgroundColor}" Opacity="0.85"/>

            <!-- Text Block Styles -->
            <Style x:Key="HeadingStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
                <Setter Property="Margin" Value="0,0,0,16" />
            </Style>

            <Style x:Key="SubheadingStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Foreground" Value="{StaticResource SecondaryText}" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>

            <Style x:Key="BodyTextStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style x:Key="CodeTextStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource CodeFont}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
                <Setter Property="Margin" Value="3" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="StatisticValueStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
                <Setter Property="FontSize" Value="32" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="{StaticResource AccentColor}" />
                <Setter Property="Margin" Value="0,4,0,0" />
            </Style>

            <Style x:Key="LabelStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="Foreground" Value="{StaticResource SecondaryText}" />
            </Style>

            <Style x:Key="OutlinedButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="6"/>
            </Style>

            <!-- Additional Colors -->
            <SolidColorBrush x:Key="AccentColorLight" Color="#E3F2FD"/>
            <SolidColorBrush x:Key="DarkOverlay" Color="#000000" Opacity="0.5"/>

            <!-- Button Styles -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                <Setter Property="Foreground" Value="{StaticResource AccentText}"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="6"/>
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="6"/>
            </Style>

            <Style x:Key="TextButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <!-- Card Style -->
            <Style x:Key="ModernCardStyle" TargetType="materialDesign:Card">
                <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                <Setter Property="Padding" Value="24"/>
                <Setter Property="Margin" Value="16"/>
                <Setter Property="UniformCornerRadius" Value="8"/>
                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <!-- DataGrid Style -->
            <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="GridLinesVisibility" Value="None"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="RowHeight" Value="40"/>
                <Setter Property="AlternatingRowBackground" Value="{x:Null}"/>
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
            </Style>

            <!-- Default Style Overrides -->
            <Style TargetType="Button" BasedOn="{StaticResource TextButtonStyle}"/>

            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
            </Style>

            <Style TargetType="Label">
                <Setter Property="Margin" Value="4"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            </Style>

            <Style TargetType="MenuItem">
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
            </Style>

            <Style TargetType="TabItem" BasedOn="{StaticResource MaterialDesignTabItem}">
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                <Setter Property="Padding" Value="16,8"/>
            </Style>

            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="16,8"/>
            </Style>
            
        </ResourceDictionary>
    </prism:PrismApplication.Resources>
</prism:PrismApplication>
