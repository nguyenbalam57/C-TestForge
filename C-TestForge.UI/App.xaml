<prism:PrismApplication x:Class="C_TestForge.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:cov="clr-namespace:C_TestForge.UI.Converters">
    <prism:PrismApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Indigo.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Các tài nguyên chung -->

            <cov:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

            <cov:ScopeToColorConverter x:Key="ScopeToColorConverter" />

            <cov:CollectionToStringConverter x:Key="CollectionToStringConverter" />

            <cov:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

            <!-- Thêm màu LightBackgroundColor -->
            <SolidColorBrush x:Key="LightBackgroundColor" Color="#F5F5F5"/>

            <!-- Text Colors -->
            <SolidColorBrush x:Key="PrimaryTextColor" Color="#212121"/>
            <SolidColorBrush x:Key="SecondaryTextColor" Color="#757575"/>
            <SolidColorBrush x:Key="DisabledTextColor" Color="#9E9E9E"/>

            <!-- Primary Colors -->
            <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
            <SolidColorBrush x:Key="PrimaryLightColor" Color="#64B5F6"/>
            <SolidColorBrush x:Key="PrimaryDarkColor" Color="#1976D2"/>

            <!-- Global styles -->
            <Style TargetType="Button">
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="Margin" Value="3" />
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="Padding" Value="3" />
                <Setter Property="Margin" Value="3" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="Margin" Value="3" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="3" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

        </ResourceDictionary>
    </prism:PrismApplication.Resources>
</prism:PrismApplication>
