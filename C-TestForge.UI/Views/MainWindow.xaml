<Window x:Class="C_TestForge.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C_TestForge.UI.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="C-TestForge - Source Analysis &amp; Test Generation Tool" 
        Height="900" Width="1600"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Navigation Button Style (Redesigned) -->
        <Style x:Key="NavButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource MaterialDesignTabRadioButton}">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Foreground" Value="{StaticResource SidebarText}"/>
            <Setter Property="materialDesign:RippleAssist.Feedback" Value="{StaticResource AccentLight}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="4,4,4,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Border x:Name="Border" 
                                Background="Transparent" 
                                BorderBrush="Transparent" 
                                CornerRadius="8" 
                                Margin="4,2">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" TargetName="Border" Value="{StaticResource AccentLight}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="Border" Value="{StaticResource SidebarBackgroundActive}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Grid -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border x:Name="SidebarBorder" Grid.Column="0" 
               Background="{StaticResource SidebarBackground}" 
               BorderBrush="{StaticResource SidebarBorderBrush}" 
               BorderThickness="0,0,1,0"
               Width="{Binding SidebarWidth}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo and App Name as Toggle -->
                <Button Grid.Row="0" Margin="8,16,8,8" Background="Transparent" BorderThickness="0"
                        ToolTip="Thu gọn/Mở rộng menu"
                        Command="{Binding ToggleNavigationDrawerCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{StaticResource AccentLight}" CornerRadius="12" Padding="8" Cursor="Hand">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <materialDesign:PackIcon Kind="TestTubeEmpty" Width="32" Height="32" Foreground="White"/>
                                                <TextBlock Text="C-TestForge" FontSize="20" FontWeight="Medium" Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsNavigationDrawerExpanded, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Navigation Items -->
                <StackPanel Grid.Row="1" Margin="0,24,0,0">
                    <!-- Dashboard -->
                    <RadioButton Style="{StaticResource NavButtonStyle}" 
                                IsChecked="{Binding SelectedMenuItem, ConverterParameter=Dashboard, Converter={StaticResource EqualityConverter}}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="Dashboard">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ViewDashboard" Width="24" Height="24" Margin="12,0,0,0" Foreground="{StaticResource SidebarIcon}"/>
                            <TextBlock Text="Dashboard" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsNavigationDrawerExpanded, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <!-- Project Explorer -->
                    <RadioButton Style="{StaticResource NavButtonStyle}" 
                                IsChecked="{Binding SelectedMenuItem, ConverterParameter=ProjectExplorer, Converter={StaticResource EqualityConverter}}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="ProjectExplorer">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="FileTreeOutline" Width="24" Height="24" Margin="12,0,0,0" Foreground="{StaticResource SidebarIcon}"/>
                            <TextBlock Text="Project Explorer" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsNavigationDrawerExpanded, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <!-- Source Analysis -->
                    <RadioButton Style="{StaticResource NavButtonStyle}" 
                                IsChecked="{Binding SelectedMenuItem, ConverterParameter=SourceAnalysis, Converter={StaticResource EqualityConverter}}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="SourceAnalysis">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="FileCodeOutline" Width="24" Height="24" Margin="12,0,0,0" Foreground="{StaticResource SidebarIcon}"/>
                            <TextBlock Text="Source Analysis" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsNavigationDrawerExpanded, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <!-- Test Cases -->
                    <RadioButton Style="{StaticResource NavButtonStyle}" 
                                IsChecked="{Binding SelectedMenuItem, ConverterParameter=TestCases, Converter={StaticResource EqualityConverter}}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="TestCases">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ClipboardCheckOutline" Width="24" Height="24" Margin="12,0,0,0" Foreground="{StaticResource SidebarIcon}"/>
                            <TextBlock Text="Test Cases" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsNavigationDrawerExpanded, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Separator -->
                    <Separator Background="#30363D" Margin="16,16"/>
                    
                    <!-- Settings -->
                    <RadioButton Style="{StaticResource NavButtonStyle}" 
                                IsChecked="{Binding SelectedMenuItem, ConverterParameter=Settings, Converter={StaticResource EqualityConverter}}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="Settings">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CogOutline" Width="24" Height="24" Margin="12,0,0,0" Foreground="{StaticResource SidebarIcon}"/>
                            <TextBlock Text="Settings" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsNavigationDrawerExpanded, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>

                    <!-- About -->
                    <RadioButton Style="{StaticResource NavButtonStyle}" 
                                IsChecked="{Binding SelectedMenuItem, ConverterParameter=About, Converter={StaticResource EqualityConverter}}"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="About">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="InformationOutline" Width="24" Height="24" Margin="12,0,0,0" Foreground="{StaticResource SidebarIcon}"/>
                            <TextBlock Text="About" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsNavigationDrawerExpanded, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

                <!-- App Version -->
                <StackPanel Grid.Row="2" Margin="16,8" HorizontalAlignment="Left">
                    <TextBlock Text="v1.0.0" FontSize="12" Foreground="#8B949E"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Column="1" Background="{StaticResource AppBackground}">
            <!-- Header -->
            <Grid VerticalAlignment="Top" Height="64" Background="{StaticResource HeaderBackground}">
                <Grid.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="5" Opacity="0.2"/>
                </Grid.Effect>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- Breadcrumbs + Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0">
                    <!-- Breadcrumbs placeholder (có thể binding sau) -->
                    <!--<ItemsControl ItemsSource="{Binding Breadcrumbs}" ... />-->
                    <TextBlock Text="{Binding SelectedMenuItem}" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                </StackPanel>
                <!-- Status (giữa) -->
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" FontSize="14" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <!-- Search + Notification + User (phải) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,24,0">
                    <!-- Search (giữ nguyên) -->
                    <materialDesign:ColorZone Mode="Standard" CornerRadius="4" Height="40" Width="240" Padding="8,4" Margin="8,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Margin="8,0,0,0" Opacity="0.6"/>
                            <TextBox Grid.Column="1" materialDesign:HintAssist.Hint="Search..." BorderThickness="0" Margin="8,0,0,0" VerticalAlignment="Center" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                    </materialDesign:ColorZone>
                    <!-- Reload Button -->
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="Reload project data"
                            Margin="8,0,0,0"
                            Command="{Binding ReloadDataCommand}">
                        <materialDesign:PackIcon Kind="Refresh" Width="24" Height="24"/>
                    </Button>
                    <!-- Notification -->
                    <Button Style="{StaticResource MaterialDesignToolButton}" ToolTip="Thông báo" Margin="8,0,0,0">
                        <materialDesign:PackIcon Kind="BellOutline" Width="24" Height="24"/>
                    </Button>
                    <!-- User profile (giữ nguyên) -->
                    <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                        <materialDesign:PopupBox.ToggleContent>
                            <materialDesign:Chip Content="User" IconBackground="{StaticResource AccentLight}" IconForeground="White">
                                <materialDesign:Chip.Icon>
                                    <materialDesign:PackIcon Kind="Account"/>
                                </materialDesign:Chip.Icon>
                            </materialDesign:Chip>
                        </materialDesign:PopupBox.ToggleContent>
                        <StackPanel>
                            <Button Content="Profile" Command="{Binding NavigateCommand}" CommandParameter="UserProfile"/>
                            <Button Content="Settings" Command="{Binding NavigateCommand}" CommandParameter="Settings"/>
                            <Separator/>
                            <Button Content="Sign Out" Command="{Binding SignOutCommand}"/>
                        </StackPanel>
                    </materialDesign:PopupBox>
                </StackPanel>
            </Grid>
            
            <!-- Main Content Region -->
            <ContentControl prism:RegionManager.RegionName="MainRegion" 
                          Margin="0,64,0,0"/>
        </Grid>
    </Grid>
</Window>
