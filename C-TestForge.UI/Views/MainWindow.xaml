<Window x:Class="C_TestForge.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C_TestForge.UI.Views"
        xmlns:vm="clr-namespace:C_TestForge.UI.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding ProjectName, StringFormat='C-TestForge - {0}'}" 
        Height="800" Width="1200">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="FontSize" Value="12" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="5" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="HeadersVisibility" Value="All" />
            <Setter Property="GridLinesVisibility" Value="All" />
            <Setter Property="AlternatingRowBackground" Value="#FFF0F0F0" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="New Project" Command="{Binding NewProjectCommand}" />
                <MenuItem Header="Open Project" Command="{Binding OpenProjectCommand}" />
                <MenuItem Header="Save Project" Command="{Binding SaveProjectCommand}" />
                <Separator />
                <MenuItem Header="Close Project" Command="{Binding CloseProjectCommand}" />
                <Separator />
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="Project">
                <MenuItem Header="Parse Source Files" Command="{Binding ParseSourceFilesCommand}" />
                <MenuItem Header="Add Source File" Command="{Binding AddSourceFileCommand}" />
                <MenuItem Header="Remove Source File" Command="{Binding RemoveSourceFileCommand}" 
                          CommandParameter="{Binding SelectedSourceFile}" />
            </MenuItem>
            <MenuItem Header="Test Cases">
                <MenuItem Header="Import Test Cases" Command="{Binding ImportTestCasesCommand}" />
                <MenuItem Header="Export Test Cases" Command="{Binding ExportTestCasesCommand}" />
                <Separator />
                <MenuItem Header="Generate Test Cases" Command="{Binding GenerateTestCasesCommand}" />
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Project Settings" Command="{Binding ProjectSettingsCommand}" />
                <MenuItem Header="Analysis Options" Command="{Binding AnalysisOptionsCommand}" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Command="{Binding AboutCommand}" />
            </MenuItem>
        </Menu>

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <ToolBar Grid.Row="0">
                <Button ToolTip="New Project" Command="{Binding NewProjectCommand}">
                    <materialDesign:PackIcon Kind="File" />
                </Button>
                <Button ToolTip="Open Project" Command="{Binding OpenProjectCommand}">
                    <materialDesign:PackIcon Kind="FolderOpen" />
                </Button>
                <Button ToolTip="Save Project" Command="{Binding SaveProjectCommand}">
                    <materialDesign:PackIcon Kind="ContentSave" />
                </Button>
                <Separator />
                <Button ToolTip="Parse Source Files" Command="{Binding ParseSourceFilesCommand}">
                    <materialDesign:PackIcon Kind="CodeTags" />
                </Button>
                <Button ToolTip="Analyze Source File" Command="{Binding AnalyzeSourceFileCommand}" 
                        CommandParameter="{Binding SelectedSourceFile}">
                    <materialDesign:PackIcon Kind="Microscope" />
                </Button>
                <Separator />
                <Button ToolTip="Import Test Cases" Command="{Binding ImportTestCasesCommand}">
                    <materialDesign:PackIcon Kind="Import" />
                </Button>
                <Button ToolTip="Export Test Cases" Command="{Binding ExportTestCasesCommand}">
                    <materialDesign:PackIcon Kind="Export" />
                </Button>
            </ToolBar>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Project Explorer -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Project Info Header -->
                    <StackPanel Grid.Row="0" Margin="5">
                        <TextBlock Text="Project Explorer" FontWeight="Bold" />
                        <TextBlock Text="{Binding ProjectName}" Margin="0,5,0,0" />
                    </StackPanel>

                    <!-- Source Files Tree -->
                    <TabControl Grid.Row="1" Margin="5">
                        <TabItem Header="Source Files">
                            <ListBox ItemsSource="{Binding SourceFiles}" 
                                     SelectedItem="{Binding SelectedSourceFile, Mode=TwoWay}"
                                     DisplayMemberPath="FileName" />
                        </TabItem>
                        <TabItem Header="Test Cases">
                            <ListBox ItemsSource="{Binding TestCases}" 
                                     SelectedItem="{Binding SelectedTestCase, Mode=TwoWay}"
                                     DisplayMemberPath="Name" />
                        </TabItem>
                    </TabControl>
                </Grid>

                <!-- Splitter -->
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />

                <!-- Right Panel - Analysis Results -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Source File Info Header -->
                    <StackPanel Grid.Row="0" Margin="5">
                        <TextBlock Text="Source File:" FontWeight="Bold" />
                        <TextBlock Text="{Binding SelectedSourceFile.FilePath}" />
                    </StackPanel>

                    <!-- Analysis Results Tabs -->
                    <TabControl Grid.Row="1" Margin="5">
                        <TabItem Header="Source Code">
                            <TextBox Text="{Binding SelectedSourceFile.Content, Mode=OneWay}" 
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     HorizontalScrollBarVisibility="Auto"
                                     VerticalScrollBarVisibility="Auto" />
                        </TabItem>

                        <TabItem Header="Definitions">
                            <DataGrid ItemsSource="{Binding Definitions}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150" />
                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*" />
                                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" />
                                    <DataGridTextColumn Header="Line" Binding="{Binding LineNumber}" Width="60" />
                                    <DataGridCheckBoxColumn Header="Is Macro" Binding="{Binding IsMacro}" Width="70" />
                                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="70" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="Variables">
                            <DataGrid ItemsSource="{Binding Variables}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150" />
                                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120" />
                                    <DataGridTextColumn Header="Scope" Binding="{Binding Scope}" Width="80" />
                                    <DataGridTextColumn Header="Value" Binding="{Binding DefaultValue}" Width="*" />
                                    <DataGridCheckBoxColumn Header="Is Static" Binding="{Binding IsStatic}" Width="70" />
                                    <DataGridCheckBoxColumn Header="Is Const" Binding="{Binding IsConst}" Width="70" />
                                    <DataGridCheckBoxColumn Header="Is Array" Binding="{Binding IsArray}" Width="70" />
                                    <DataGridTextColumn Header="Line" Binding="{Binding LineNumber}" Width="60" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="Functions">
                            <DataGrid ItemsSource="{Binding Functions}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="180" />
                                    <DataGridTextColumn Header="Return Type" Binding="{Binding ReturnType}" Width="120" />
                                    <DataGridTextColumn Header="Parameters" Binding="{Binding ParameterCount}" Width="80" />
                                    <DataGridTextColumn Header="Complexity" Binding="{Binding Complexity}" Width="80" />
                                    <DataGridCheckBoxColumn Header="Is Static" Binding="{Binding IsStatic}" Width="70" />
                                    <DataGridCheckBoxColumn Header="Is Inline" Binding="{Binding IsInline}" Width="70" />
                                    <DataGridTextColumn Header="Line" Binding="{Binding LineNumber}" Width="60" />
                                    <DataGridTextColumn Header="Source File" Binding="{Binding SourceFile}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="Preprocessor">
                            <DataGrid ItemsSource="{Binding ConditionalDirectives}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" />
                                    <DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="*" />
                                    <DataGridTextColumn Header="Line" Binding="{Binding LineNumber}" Width="60" />
                                    <DataGridCheckBoxColumn Header="Is Active" Binding="{Binding IsActive}" Width="70" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <ProgressBar Width="100" Height="15" IsIndeterminate="{Binding IsAnalyzing}" 
                             Visibility="{Binding IsAnalyzing, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>