<UserControl x:Class="C_TestForge.UI.Views.ProjectExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:C_TestForge.UI.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Header Title -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Quản lý dự án" FontSize="24" FontWeight="Light" />
                <TextBlock Text="{Binding ProjectName, StringFormat='Dự án: {0}'}" 
                         FontSize="14" Foreground="#606060" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GridSplitter Grid.Column="1"
              Width="6"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="#FFEEEEEE"
              ShowsPreview="True"
              Margin="0"
              ResizeBehavior="PreviousAndNext"
              ResizeDirection="Columns"
              Cursor="SizeWE">
                <GridSplitter.Style>
                    <Style TargetType="GridSplitter">
                        <Setter Property="Background" Value="#FFEEEEEE"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridSplitter">
                                    <Grid Background="{TemplateBinding Background}">
                                        <Rectangle Fill="{TemplateBinding Background}" RadiusX="3" RadiusY="3"/>
                                        <Rectangle Width="2" HorizontalAlignment="Center" Fill="#FFB0B0B0" RadiusX="1" RadiusY="1"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF90CAF9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </GridSplitter.Style>
            </GridSplitter>

            <!-- Source Files Section -->
            <materialDesign:Card Grid.Column="0" Margin="5" UniformCornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Source Files Header -->
                    <Grid Grid.Row="0" Background="#F5F5F5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,10">
                            <materialDesign:PackIcon Kind="FileDocument" Width="24" Height="24" 
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Tệp nguồn" FontSize="16" FontWeight="Medium" 
                                     Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" Text="{Binding SourceFiles.Count, StringFormat='Tổng: {0}'}" 
                                 VerticalAlignment="Center" Margin="0,0,15,0"/>
                    </Grid>

                    <!-- Source Files List -->
                    <Grid Grid.Row="1">
                        <!-- Empty Message -->
                        <TextBlock Text="Chưa có tệp nguồn nào trong dự án" 
                               FontSize="14" Foreground="#909090" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="{Binding HasSourceFiles, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                        <!-- File List -->
                        <ListView ItemsSource="{Binding SourceFiles}" 
                              SelectedItem="{Binding SelectedSourceFile, Mode=TwoWay}"
                              Visibility="{Binding HasSourceFiles, Converter={StaticResource BooleanToVisibilityConverter}}"
                              BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- File Icon -->
                                        <materialDesign:PackIcon Grid.Column="0" Kind="FileCode" Width="24" Height="24" 
                                                             Margin="0,0,10,0" VerticalAlignment="Center"/>

                                        <!-- File Information -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding FileName}" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding FilePath}" TextTrimming="CharacterEllipsis" 
                                                     Foreground="#606060" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <!-- Source File Details -->
            <materialDesign:Card Grid.Column="2" Margin="5" UniformCornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Details Header -->
                    <Grid Grid.Row="0" Background="#F5F5F5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="48*"/>
                            <ColumnDefinition Width="329*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Chi tiết tệp" FontSize="16" FontWeight="Medium" Margin="15,10,15,10" Grid.ColumnSpan="2"/>
                    </Grid>

                    <!-- No File Selected -->
                    <Grid Grid.Row="1" 
                        Visibility="{Binding SelectedSourceFile, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="FileDocumentOutline" Width="64" Height="64" 
                                                  HorizontalAlignment="Center" Foreground="#A0A0A0"/>
                            <TextBlock Text="Chưa chọn tệp nguồn nào" 
                                     FontSize="16" Foreground="#606060" 
                                     HorizontalAlignment="Center" Margin="0,20,0,0"/>
                            <TextBlock Text="Chọn một tệp từ danh sách bên trái để xem thông tin chi tiết"
                                     FontSize="14" Foreground="#909090" 
                                     HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" 
                                     Margin="20,10,20,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- File Details Content -->
                    <Grid Grid.Row="1" Margin="15"
                        Visibility="{Binding SelectedSourceFile, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="74*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- File Name -->
                        <TextBlock Grid.Row="0" Text="{Binding SelectedSourceFile.FileName}" 
                                 FontSize="20" FontWeight="SemiBold" Grid.ColumnSpan="2" Margin="0,0,0,21" Grid.RowSpan="2"/>

                        <!-- File Path -->
                        <TextBlock Grid.Row="1" Text="{Binding SelectedSourceFile.FilePath}" 
                                 Foreground="#606060" TextWrapping="Wrap" Margin="0,5,0,67" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

                        <!-- File Statistics -->
                        <Grid Grid.Row="2" Margin="0,20,0,10" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Lines -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Số dòng" FontSize="12" Foreground="#909090"/>
                                <TextBlock Text="{Binding SelectedSourceFile.LineCount}" FontSize="16"/>
                            </StackPanel>

                            <!-- File Size -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Kích thước" FontSize="12" Foreground="#909090"/>
                                <TextBlock Text="{Binding SelectedSourceFile.FileSize, StringFormat='{}{0:N0} bytes'}" FontSize="16"/>
                            </StackPanel>

                            <!-- Last Modified -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Sửa đổi lần cuối" FontSize="12" Foreground="#909090"/>
                                <TextBlock Text="{Binding SelectedSourceFile.LastModified, StringFormat='{}{0:dd/MM/yyyy}'}" FontSize="16"/>
                            </StackPanel>
                        </Grid>

                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>