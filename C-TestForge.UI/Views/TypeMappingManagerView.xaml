<Window x:Class="C_TestForge.UI.Views.TypeMappingManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C_TestForge.UI.Views"
        xmlns:vm="clr-namespace:C_TestForge.UI.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Type Mapping Manager" Height="600" Width="800"
        Style="{StaticResource MaterialWindowStyle}"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Type Mapping Manager" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                   Margin="0,0,0,16"/>

        <!-- Search and Filter Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <TextBox Grid.Column="0" 
                     materialDesign:HintAssist.Hint="Search type mappings..."
                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,16,0"/>

            <!-- Filter Options -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <CheckBox Content="Predefined" IsChecked="{Binding ShowPredefined}" Margin="0,0,8,0"/>
                <CheckBox Content="Detected" IsChecked="{Binding ShowDetected}" Margin="0,0,8,0"/>
                <CheckBox Content="Learned" IsChecked="{Binding ShowLearned}" Margin="0,0,8,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content - DataGrid and Details -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Type Mappings DataGrid -->
            <DataGrid Grid.Column="0" 
                      ItemsSource="{Binding TypeMappings}"
                      SelectedItem="{Binding SelectedMapping}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      CanUserSortColumns="True"
                      CanUserResizeColumns="True"
                      CanUserReorderColumns="True"
                      materialDesign:DataGridAssist.CellPadding="8"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="User Type" Binding="{Binding UserType}" Width="*"/>
                    <DataGridTextColumn Header="Base Type" Binding="{Binding BaseType}" Width="*"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="70"/>
                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Details Panel -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="16,0,0,0">
                    <TextBlock Text="Type Details" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                               Margin="0,0,0,16"/>

                    <!-- No selection message -->
                    <TextBlock Text="Select a type mapping to view or edit details" 
                               Visibility="{Binding SelectedMapping, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=true}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"/>

                    <!-- Details Form -->
                    <Grid Visibility="{Binding SelectedMapping, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- User Type -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="User Type:" 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,8,8,8"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding SelectedMapping.UserType, UpdateSourceTrigger=PropertyChanged}" 
                                 IsEnabled="{Binding SelectedMapping.IsEditable}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,8,0,8"/>

                        <!-- Base Type -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Base Type:" 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,8,8,8"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding SelectedMapping.BaseType, UpdateSourceTrigger=PropertyChanged}" 
                                 IsEnabled="{Binding SelectedMapping.IsEditable}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,8,0,8"/>

                        <!-- Min Value -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Min Value:" 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,8,8,8"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding SelectedMapping.MinValue, UpdateSourceTrigger=PropertyChanged}" 
                                 IsEnabled="{Binding SelectedMapping.IsEditable}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,8,0,8"/>

                        <!-- Max Value -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Max Value:" 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,8,8,8"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="{Binding SelectedMapping.MaxValue, UpdateSourceTrigger=PropertyChanged}" 
                                 IsEnabled="{Binding SelectedMapping.IsEditable}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,8,0,8"/>

                        <!-- Size -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Size (bytes):" 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,8,8,8"/>
                        <TextBox Grid.Row="4" Grid.Column="1" 
                                 Text="{Binding SelectedMapping.Size, UpdateSourceTrigger=PropertyChanged}" 
                                 IsEnabled="{Binding SelectedMapping.IsEditable}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,8,0,8"/>

                        <!-- Source -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Source:" 
                                   Style="{StaticResource MaterialDesignBody1TextBlock}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,8,8,8"/>
                        <TextBox Grid.Row="5" Grid.Column="1" 
                                 Text="{Binding SelectedMapping.Source}" 
                                 IsReadOnly="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,8,0,8"/>

                        <!-- Derive Constraints Button -->
                        <Button Grid.Row="6" Grid.Column="1" 
                                Content="Derive Constraints" 
                                Command="{Binding DeriveConstraintsCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                HorizontalAlignment="Left"
                                Margin="0,16,0,0"
                                IsEnabled="{Binding SelectedMapping.IsEditable}"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Buttons -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="Add New" 
                        Command="{Binding AddMappingCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,8,0"/>
                <Button Content="Remove" 
                        Command="{Binding RemoveMappingCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0"/>
                <Button Content="Import from Header" 
                        Command="{Binding ImportFromHeaderCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0"/>
                <Button Content="Export to Header" 
                        Command="{Binding ExportToHeaderCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
            </StackPanel>

            <!-- Right Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Save Changes" 
                        Command="{Binding SaveMappingsCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="4"
                        Background="{StaticResource PrimaryColor}"
                        BorderBrush="{StaticResource PrimaryColor}"
                        Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
